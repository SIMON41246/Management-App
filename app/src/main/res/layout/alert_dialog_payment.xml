<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="9dp"
        android:hint="Ajouter une paiement"
        app:suffixText="DH"
        app:suffixTextColor="@color/black"
        android:outlineProvider="background"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:startIconDrawable="@drawable/ic_baseline_euro_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payment"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_yellow"
            android:inputType="text"
            android:textColorHint="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/corners"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:id="@+id/alert_add_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PayÃ©" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/corners"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#935757"
        android:textColor="@color/white"
        android:id="@+id/alert_show_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Show Payment" />

</LinearLayout>