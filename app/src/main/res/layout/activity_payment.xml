<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payments.PaymentActivity">
    <SearchView
        android:id="@+id/search_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/coeners_client"
        android:backgroundTint="#D3883A"
        android:backgroundTintMode="screen"
        android:clickable="true"
        android:queryHint="Search"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/search_payment"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/recycle_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>