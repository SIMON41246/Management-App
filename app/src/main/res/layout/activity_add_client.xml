<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Client.AddClient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="9dp"
            android:hint="Name"
            android:outlineProvider="background"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:suffixTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_yellow"
                android:inputType="text"
                android:textColorHint="@color/black"
                app:errorEnabled="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="9dp"
            android:hint="Tele"
            android:outlineProvider="background"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:helperText="exemple (630826070)"
            app:prefixText="212 "
            app:startIconDrawable="@drawable/ic_baseline_smartphone_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_yellow"
                android:inputType="phone"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="9dp"
            android:hint="Price"
            android:outlineProvider="background"
            app:errorEnabled="true"
            app:helperText="currency is DH "
            app:startIconDrawable="@drawable/ic_baseline_euro_24"
            app:suffixText="DH">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_yellow"
                android:inputType="number"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/corners"
            android:backgroundTint="@color/black"
            android:paddingStart="40sp"
            android:paddingEnd="40sp"
            android:text="Save"

            android:textColor="@color/white"
            android:textSize="20sp"

            />


    </LinearLayout>


</LinearLayout>